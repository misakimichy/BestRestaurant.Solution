@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

<h1>Restaurants</h1>
@if(@Model.Count == 0)
{
    <h2>No Restaurants have been added yet.</h2>
}

<ul>
@foreach(Restaurant restaurant in Model)
{
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", new {id = restaurant.idRestaurant})</li>
}
</ul>

<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>